generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quiz {
  id        String     @id @default(uuid())
  title     String
  createdAt DateTime   @default(now())
  questions Question[]
}

model Question {
  id      String   @id @default(uuid())
  text    String
  type    String
  options String?
  quizId  String
  quiz    Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}
